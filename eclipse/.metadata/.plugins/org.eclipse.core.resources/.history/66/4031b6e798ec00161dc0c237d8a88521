package escapemc.Command.commands;

import escapemc.Command.Command;
import escapemc.Util.ChatUtil;
import escapemc.module.Module;
import escapemc.module.ModuleManager;
import escapemc.module.modules.Killaura;

public class CommandKillauraSwitch extends Command {

	@Override
	public String getName() {
		
		return "mode";
		
	}

	@Override
	public String getDescription() {
		
		return "Switches mode (if any) for the module.";
		
	}

	@Override
	public String getSyntax() {
		
		return "-mode [MOD]";
		
	}

	@Override
	public void onCommand(String command, String[] args) throws Exception {

		try{
			for(Module m : ModuleManager.getModules()) {
			
				if(m.getName().equalsIgnoreCase(args[1])) {
					
					if(m.mode == false) {
						m.setMode(true);
						ChatUtil.SendChatMessage("Changed the mode 브of " + m.getName() + ".");
						ChatUtil.SendChatMessage("븍Note, 브the 브only 브Mods 브that 브have 브keybinds 브so 브far 브are:");
						ChatUtil.SendChatMessage("븎Killaura 브(Axe and Sword)");
						//Add more mode listings here					
					}
					if(m.mode == true) {
						m.setMode(false);
						ChatUtil.SendChatMessage("Changed the mode 브of " + m.getName() + ".");
						ChatUtil.SendChatMessage("븍Note, 브the 브only 브Mods 브that 브have 브keybinds 브so 브far 브are:");
						ChatUtil.SendChatMessage("븎Killaura 브(Axe and Sword)");
						//Add more mode listings here
				}
				
			}
		
		} catch(Exception e) {
		ChatUtil.SendChatMessage("Fuck, my code didn't work because 브of 브your 브shitty 브command.");
		}
	}
}
